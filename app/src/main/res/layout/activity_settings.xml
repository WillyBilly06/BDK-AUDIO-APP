<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bdk_background_primary"
    android:fitsSystemWindows="true"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back"
                app:tint="@color/bdk_text_primary"
                xmlns:app="http://schemas.android.com/apk/res-auto" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/bdk_text_primary"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Connection Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONNECTION"
                android:textSize="11sp"
                android:textColor="@color/bdk_text_tertiary"
                android:letterSpacing="0.15"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:id="@+id/btnOtherDevice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bdk_card_glass"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Connect to Other Device"
                    android:textSize="15sp"
                    android:textColor="@color/bdk_text_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="›"
                    android:textSize="20sp"
                    android:textColor="@color/bdk_text_tertiary" />
            </LinearLayout>

            <!-- Device Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEVICE"
                android:textSize="11sp"
                android:textColor="@color/bdk_text_tertiary"
                android:letterSpacing="0.15"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bdk_card_glass"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Device Name"
                    android:textSize="13sp"
                    android:textColor="@color/bdk_text_secondary" />

                <EditText
                    android:id="@+id/etDeviceName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BDK SPEAKER"
                    android:textSize="16sp"
                    android:textColor="@color/bdk_text_primary"
                    android:background="@null"
                    android:inputType="text"
                    android:maxLines="1"
                    android:layout_marginTop="4dp" />

                <Button
                    android:id="@+id/btnApplyName"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/bdk_btn_primary"
                    android:text="Apply"
                    android:textColor="@color/bdk_text_on_accent"
                    android:textAllCaps="false"
                    android:textSize="13sp"
                    android:paddingHorizontal="24dp"
                    android:layout_marginTop="12dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnDeviceInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bdk_card_glass"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Device Info"
                    android:textSize="15sp"
                    android:textColor="@color/bdk_text_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="›"
                    android:textSize="20sp"
                    android:textColor="@color/bdk_text_tertiary" />
            </LinearLayout>

            <!-- Audio Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AUDIO"
                android:textSize="11sp"
                android:textColor="@color/bdk_text_tertiary"
                android:letterSpacing="0.15"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:id="@+id/btnBluetoothCodec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bdk_card_glass"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bluetooth Codec"
                        android:textSize="15sp"
                        android:textColor="@color/bdk_text_primary" />

                    <TextView
                        android:id="@+id/tvCurrentCodec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LDAC"
                        android:textSize="13sp"
                        android:textColor="@color/bdk_accent_primary"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="›"
                    android:textSize="20sp"
                    android:textColor="@color/bdk_text_tertiary" />
            </LinearLayout>

            <!-- Audio Toggles -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bdk_card_glass"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bass Boost"
                    android:textSize="15sp"
                    android:textColor="@color/bdk_text_primary" />

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switchBassBoost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bdk_card_glass"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bypass DSP"
                    android:textSize="15sp"
                    android:textColor="@color/bdk_text_primary" />

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switchBypassDsp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bdk_card_glass"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Channel Flip"
                    android:textSize="15sp"
                    android:textColor="@color/bdk_text_primary" />

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switchChannelFlip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Firmware Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FIRMWARE"
                android:textSize="11sp"
                android:textColor="@color/bdk_text_tertiary"
                android:letterSpacing="0.15"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:id="@+id/btnFirmwareUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bdk_card_glass"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Firmware Update"
                    android:textSize="15sp"
                    android:textColor="@color/bdk_text_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="›"
                    android:textSize="20sp"
                    android:textColor="@color/bdk_text_tertiary" />
            </LinearLayout>

            <!-- About Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABOUT"
                android:textSize="11sp"
                android:textColor="@color/bdk_text_tertiary"
                android:letterSpacing="0.15"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:id="@+id/btnAppInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bdk_card_glass"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="App Info"
                    android:textSize="15sp"
                    android:textColor="@color/bdk_text_primary" />

                <TextView
                    android:id="@+id/tvAppVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="v1.0.0"
                    android:textSize="13sp"
                    android:textColor="@color/bdk_text_tertiary" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="40dp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
