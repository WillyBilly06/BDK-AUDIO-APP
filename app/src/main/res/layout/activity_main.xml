<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bdk_background_primary"
    android:overScrollMode="ifContentScrolls"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ====== CONNECTION STATUS CARD ====== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bdk_card_glass"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Not Connected"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/bdk_text_primary"
                android:paddingBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Hidden button for code compatibility -->
                <Button
                    android:id="@+id/btnScanConnect"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnOtherDevice"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bdk_btn_secondary"
                    android:text="Connect to Other Device"
                    android:textColor="@color/bdk_text_on_accent"
                    android:textAllCaps="false"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Device List Container (shown when multiple devices found) -->
            <LinearLayout
                android:id="@+id/deviceListContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:paddingTop="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SELECT DEVICE"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/bdk_text_tertiary"
                    android:letterSpacing="0.15"
                    android:paddingBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/deviceRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>
        </LinearLayout>

        <!-- ====== EQ PRESETS CARD ====== -->
        <include layout="@layout/card_eq_presets" />

        <!-- ====== LED EFFECTS CARD ====== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bdk_card_glass"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LED EFFECTS"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/bdk_text_tertiary"
                android:letterSpacing="0.15"
                android:paddingBottom="12dp" />

            <Spinner
                android:id="@+id/spinnerLedEffect"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bdk_btn_secondary"
                android:padding="12dp"
                android:popupBackground="@color/bdk_background_elevated" />
        </LinearLayout>

        <!-- ====== LED SETTINGS CARD ====== -->
        <LinearLayout
            android:id="@+id/ledSettingsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bdk_card_glass"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LED SETTINGS"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/bdk_text_tertiary"
                android:letterSpacing="0.15"
                android:paddingBottom="12dp" />

            <!-- Brightness -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Brightness"
                    android:textSize="14sp"
                    android:textColor="@color/bdk_text_primary" />

                <SeekBar
                    android:id="@+id/seekLedBrightness"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:max="255"
                    android:progress="50"
                    android:progressTint="@color/bdk_accent_primary"
                    android:thumbTint="@color/bdk_accent_primary" />

                <TextView
                    android:id="@+id/tvBrightnessValue"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textColor="@color/bdk_accent_primary"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:gravity="end" />
            </LinearLayout>

            <!-- Ambient Controls Container (shown only for Ambient effect) -->
            <LinearLayout
                android:id="@+id/ambientControlsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AMBIENT COLORS"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/bdk_text_tertiary"
                    android:letterSpacing="0.15"
                    android:paddingBottom="8dp" />

                <!-- Color 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Color 1"
                        android:textSize="14sp"
                        android:textColor="@color/bdk_text_primary" />

                    <View
                        android:id="@+id/viewColor1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/color_preview_bg" />
                </LinearLayout>

                <!-- Color 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Color 2"
                        android:textSize="14sp"
                        android:textColor="@color/bdk_text_primary" />

                    <View
                        android:id="@+id/viewColor2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/color_preview_bg" />
                </LinearLayout>

                <!-- Gradient Type -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Gradient"
                        android:textSize="14sp"
                        android:textColor="@color/bdk_text_primary" />

                    <Spinner
                        android:id="@+id/spinnerGradient"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:background="@drawable/bdk_btn_secondary"
                        android:padding="8dp"
                        android:popupBackground="@color/bdk_background_elevated" />
                </LinearLayout>

                <!-- Speed -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Speed"
                        android:textSize="14sp"
                        android:textColor="@color/bdk_text_primary" />

                    <SeekBar
                        android:id="@+id/seekLedSpeed"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:max="255"
                        android:progress="50"
                        android:progressTint="@color/bdk_accent_secondary"
                        android:thumbTint="@color/bdk_accent_secondary" />

                    <TextView
                        android:id="@+id/tvSpeedValue"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:textColor="@color/bdk_accent_secondary"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:gravity="end" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <!-- ====== BLUETOOTH CODEC CARD ====== -->
        <LinearLayout
            android:id="@+id/codecCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bdk_card_glass"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BLUETOOTH CODEC"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/bdk_text_tertiary"
                android:letterSpacing="0.15"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Connect speaker via Bluetooth first"
                android:textSize="11sp"
                android:textColor="@color/bdk_text_tertiary"
                android:paddingBottom="12dp" />

            <Spinner
                android:id="@+id/spinnerCodec"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bdk_btn_secondary"
                android:padding="12dp"
                android:popupBackground="@color/bdk_background_elevated" />

            <Button
                android:id="@+id/btnAssociateDevice"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:text="Associate Device (for codec control)"
                android:textSize="11sp"
                android:textColor="@color/bdk_text_secondary"
                android:background="@drawable/bdk_btn_secondary"
                android:visibility="gone" />
        </LinearLayout>

        <!-- ====== AUDIO LEVELS CARD ====== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bdk_card_glass"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AUDIO LEVELS"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/bdk_text_tertiary"
                android:letterSpacing="0.15"
                android:paddingBottom="16dp" />

            <TextView
                android:id="@+id/tvLevels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Waiting for audio..."
                android:textColor="@color/bdk_text_tertiary"
                android:textSize="12sp"
                android:visibility="gone" />

            <!-- 30 Hz Bass -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:text="30 Hz"
                    android:textSize="13sp"
                    android:textColor="@color/bdk_meter_bass"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/bar30"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="8dp"
                    android:max="120"
                    android:progressDrawable="@drawable/progress_meter_bass" />

                <TextView
                    android:id="@+id/tvVal30"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:text="0 dB"
                    android:textColor="@color/bdk_text_secondary"
                    android:textSize="12sp"
                    android:gravity="end" />
            </LinearLayout>

            <!-- 60 Hz Mid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:text="60 Hz"
                    android:textSize="13sp"
                    android:textColor="@color/bdk_meter_mid"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/bar60"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="8dp"
                    android:max="120"
                    android:progressDrawable="@drawable/progress_meter_mid" />

                <TextView
                    android:id="@+id/tvVal60"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:text="0 dB"
                    android:textColor="@color/bdk_text_secondary"
                    android:textSize="12sp"
                    android:gravity="end" />
            </LinearLayout>

            <!-- 100 Hz High -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:text="100 Hz"
                    android:textSize="13sp"
                    android:textColor="@color/bdk_meter_treble"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/bar100"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="8dp"
                    android:max="120"
                    android:progressDrawable="@drawable/progress_meter_high" />

                <TextView
                    android:id="@+id/tvVal100"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:text="0 dB"
                    android:textColor="@color/bdk_text_secondary"
                    android:textSize="12sp"
                    android:gravity="end" />
            </LinearLayout>
        </LinearLayout>

        <!-- ====== DSP CONTROLS CARD ====== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bdk_card_glass"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DSP CONTROLS"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/bdk_text_tertiary"
                android:letterSpacing="0.15"
                android:paddingBottom="16dp" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchBassBoost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bass Boost"
                android:textColor="@color/bdk_text_primary"
                android:textSize="15sp"
                android:paddingVertical="8dp"
                app:trackTint="@color/bdk_switch_track_on" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchChannelFlip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Channel Flip"
                android:textColor="@color/bdk_text_primary"
                android:textSize="15sp"
                android:paddingVertical="8dp"
                app:trackTint="@color/bdk_switch_track_on" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchBypass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bypass DSP"
                android:textColor="@color/bdk_text_primary"
                android:textSize="15sp"
                android:paddingVertical="8dp"
                app:trackTint="@color/bdk_switch_track_on" />
        </LinearLayout>

        <!-- ====== EQUALIZER CARD ====== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bdk_card_glass"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EQUALIZER"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/bdk_text_tertiary"
                android:letterSpacing="0.15"
                android:paddingBottom="16dp" />

            <!-- Bass -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:text="Bass"
                    android:textSize="14sp"
                    android:textColor="@color/bdk_text_primary" />

                <SeekBar
                    android:id="@+id/seekBass"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:max="24"
                    android:progress="12"
                    android:progressTint="@color/bdk_meter_bass"
                    android:thumbTint="@color/bdk_meter_bass" />

                <TextView
                    android:id="@+id/tvBassLabel"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:text="0 dB"
                    android:textColor="@color/bdk_meter_bass"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:gravity="end" />
            </LinearLayout>

            <!-- Mid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:text="Mid"
                    android:textSize="14sp"
                    android:textColor="@color/bdk_text_primary" />

                <SeekBar
                    android:id="@+id/seekMid"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:max="24"
                    android:progress="12"
                    android:progressTint="@color/bdk_meter_mid"
                    android:thumbTint="@color/bdk_meter_mid" />

                <TextView
                    android:id="@+id/tvMidLabel"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:text="0 dB"
                    android:textColor="@color/bdk_meter_mid"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:gravity="end" />
            </LinearLayout>

            <!-- Treble -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:text="Treble"
                    android:textSize="14sp"
                    android:textColor="@color/bdk_text_primary" />

                <SeekBar
                    android:id="@+id/seekTreble"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:max="24"
                    android:progress="12"
                    android:progressTint="@color/bdk_meter_treble"
                    android:thumbTint="@color/bdk_meter_treble" />

                <TextView
                    android:id="@+id/tvTrebleLabel"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:text="0 dB"
                    android:textColor="@color/bdk_meter_treble"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:gravity="end" />
            </LinearLayout>
        </LinearLayout>

        <!-- ====== DEVICE SETTINGS CARD ====== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bdk_card_glass"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DEVICE SETTINGS"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/bdk_text_tertiary"
                android:letterSpacing="0.15"
                android:paddingBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Device Name"
                android:textColor="@color/bdk_text_secondary"
                android:textSize="12sp"
                android:paddingBottom="4dp" />

            <EditText
                android:id="@+id/etDeviceName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bdk_btn_secondary"
                android:textColor="@color/bdk_text_primary"
                android:textColorHint="@color/bdk_text_tertiary"
                android:hint="BDK SPEAKER"
                android:imeOptions="actionDone"
                android:textSize="15sp"
                android:paddingHorizontal="16dp"
                android:inputType="text" />

            <Button
                android:id="@+id/btnApplyName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bdk_btn_primary"
                android:text="Apply Name"
                android:textColor="@color/bdk_text_on_accent"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:layout_marginTop="12dp" />
        </LinearLayout>

        <!-- ====== FIRMWARE UPDATE CARD ====== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bdk_card_glass"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FIRMWARE UPDATE"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/bdk_text_tertiary"
                android:letterSpacing="0.15"
                android:paddingBottom="16dp" />

            <!-- OTA Progress Bar -->
            <ProgressBar
                android:id="@+id/progressOta"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/bdk_accent_primary"
                android:progressBackgroundTint="@color/bdk_background_elevated"
                android:visibility="gone"
                android:layout_marginBottom="12dp" />

            <!-- OTA Status Text -->
            <TextView
                android:id="@+id/tvOtaStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/bdk_text_secondary"
                android:textSize="13sp"
                android:visibility="gone"
                android:paddingBottom="12dp" />

            <!-- Check for Updates Button -->
            <Button
                android:id="@+id/btnCheckUpdates"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bdk_btn_primary"
                android:text="Check for Updates"
                android:textColor="@color/bdk_text_on_accent"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSelectFirmware"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/bdk_btn_secondary"
                    android:text="Select File"
                    android:textColor="@color/bdk_text_on_accent"
                    android:textAllCaps="false"
                    android:textSize="15sp" />

                <Space android:layout_width="12dp" android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnStartOta"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/bdk_btn_primary"
                    android:text="Start OTA"
                    android:textColor="@color/bdk_text_on_accent"
                    android:textAllCaps="false"
                    android:textSize="15sp" />
