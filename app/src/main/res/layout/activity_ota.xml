<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bdk_background_primary"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="48dp"
        android:paddingBottom="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"
            app:tint="@color/bdk_text_primary" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Firmware Update"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/bdk_text_primary"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Version Info Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bdk_card_glass"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvCurrentVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current: v1.0.0"
                    android:textSize="16sp"
                    android:textColor="@color/bdk_text_primary" />

                <TextView
                    android:id="@+id/tvLatestVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available: --"
                    android:textSize="16sp"
                    android:textColor="@color/bdk_accent_primary"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Status -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Press Check for Updates to begin"
                android:textSize="14sp"
                android:textColor="@color/bdk_text_primary"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Download Progress -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Download"
                    android:textSize="12sp"
                    android:textColor="@color/bdk_text_tertiary"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ProgressBar
                        android:id="@+id/progressDownload"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="0"
                        android:visibility="invisible"
                        android:progressDrawable="@drawable/bdk_progress_accent" />

                    <TextView
                        android:id="@+id/tvDownloadProgress"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textSize="12sp"
                        android:textColor="@color/bdk_text_secondary"
                        android:gravity="end"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>

            <!-- Upload Progress -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload to Device"
                    android:textSize="12sp"
                    android:textColor="@color/bdk_text_tertiary"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ProgressBar
                        android:id="@+id/progressUpload"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="0"
                        android:visibility="invisible"
                        android:progressDrawable="@drawable/bdk_progress_accent" />

                    <TextView
                        android:id="@+id/tvUploadProgress"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textSize="12sp"
                        android:textColor="@color/bdk_text_secondary"
                        android:gravity="end"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>

            <!-- Buttons -->
            <Button
                android:id="@+id/btnCheckUpdate"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Check for Updates"
                android:textSize="16sp"
                android:textColor="@color/bdk_text_on_accent"
                android:textAllCaps="false"
                android:backgroundTint="@color/bdk_accent_primary"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnStartOta"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Download &amp; Install"
                android:textSize="16sp"
                android:textColor="@color/bdk_text_on_accent"
                android:textAllCaps="false"
                android:backgroundTint="@color/bdk_success"
                android:enabled="false" />

            <!-- Warning -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⚠️ Do not disconnect device during update"
                android:textSize="12sp"
                android:textColor="@color/bdk_text_tertiary"
                android:gravity="center"
                android:layout_marginTop="24dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
