<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bdk_background_primary"
    android:fitsSystemWindows="true">

    <!-- Top Status Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="48dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDeviceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BDK SPEAKER"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/bdk_text_primary" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <View
                    android:id="@+id/statusDot"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/bdk_status_dot" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connected"
                    android:textSize="13sp"
                    android:textColor="@color/bdk_text_secondary"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_settings"
            android:contentDescription="Settings"
            app:tint="@color/bdk_text_secondary" />
    </LinearLayout>

    <!-- Content Area -->
    <FrameLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/bottomNav">

        <!-- Sound Tab Content -->
        <ScrollView
            android:id="@+id/tabSound"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Current Preset Display -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SOUND PROFILE"
                    android:textSize="11sp"
                    android:textColor="@color/bdk_text_tertiary"
                    android:letterSpacing="0.15" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    
                    <TextView
                        android:id="@+id/tvCurrentPreset"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Balanced"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/bdk_accent_primary"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/tvCodecBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SBC"
                        android:textSize="11sp"
                        android:textColor="@color/bdk_text_primary"
                        android:background="@drawable/bdk_codec_badge"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- Level Meter -->
                <LinearLayout
                    android:id="@+id/levelMeterContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="24dp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ProgressBar
                            android:id="@+id/bar30"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:max="120"
                            android:progress="0"
                            android:progressDrawable="@drawable/bdk_meter_bass" />
                        <TextView
                            android:id="@+id/tvVal30"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30Hz"
                            android:textSize="10sp"
                            android:textColor="@color/bdk_meter_bass"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <Space android:layout_width="8dp" android:layout_height="1dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ProgressBar
                            android:id="@+id/bar60"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:max="120"
                            android:progress="0"
                            android:progressDrawable="@drawable/bdk_meter_mid" />
                        <TextView
                            android:id="@+id/tvVal60"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="60Hz"
                            android:textSize="10sp"
                            android:textColor="@color/bdk_meter_mid"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <Space android:layout_width="8dp" android:layout_height="1dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ProgressBar
                            android:id="@+id/bar100"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:max="120"
                            android:progress="0"
                            android:progressDrawable="@drawable/bdk_meter_treble" />
                        <TextView
                            android:id="@+id/tvVal100"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100Hz"
                            android:textSize="10sp"
                            android:textColor="@color/bdk_meter_treble"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- EQ Presets Grid -->
                <include layout="@layout/section_eq_presets" />

                <!-- Fine Tune Section (Collapsible) -->
                <LinearLayout
                    android:id="@+id/sectionFineTune"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="24dp">

                    <LinearLayout
                        android:id="@+id/btnFineTune"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:background="@drawable/bdk_card_glass">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Fine Tune EQ"
                            android:textSize="15sp"
                            android:textColor="@color/bdk_text_primary" />

                        <TextView
                            android:id="@+id/tvFineTuneArrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â–¼"
                            android:textSize="12sp"
                            android:textColor="@color/bdk_text_tertiary" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fineTuneContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:paddingTop="16dp">

                        <include layout="@layout/section_eq_sliders" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <!-- LED Tab Content -->
        <ScrollView
            android:id="@+id/tabLed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LED EFFECT"
                    android:textSize="11sp"
                    android:textColor="@color/bdk_text_tertiary"
                    android:letterSpacing="0.15" />

                <TextView
                    android:id="@+id/tvCurrentEffect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bass Reactor"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/bdk_accent_primary"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="24dp" />

                <!-- LED Effect Picker (includes brightness, speed, colors, gradient) -->
                <include layout="@layout/section_led_effects" />

            </LinearLayout>
        </ScrollView>

    </FrameLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:background="@color/bdk_background_secondary"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/navSound"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/navSoundIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_equalizer"
                app:tint="@color/bdk_accent_primary" />

            <TextView
                android:id="@+id/navSoundText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sound"
                android:textSize="11sp"
                android:textColor="@color/bdk_accent_primary"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navLed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/navLedIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_led"
                app:tint="@color/bdk_text_tertiary" />

            <TextView
                android:id="@+id/navLedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LED"
                android:textSize="11sp"
                android:textColor="@color/bdk_text_tertiary"
                android:layout_marginTop="4dp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Hidden button for code compatibility -->
    <Button
        android:id="@+id/btnScanConnect"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
