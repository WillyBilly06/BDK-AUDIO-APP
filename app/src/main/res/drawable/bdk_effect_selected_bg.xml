<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Glow/blur effect using a gradient -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="100dp"
                android:startColor="#4000D4FF"
                android:endColor="#0000D4FF"
                android:centerX="0.5"
                android:centerY="0.5" />
        </shape>
    </item>
    <!-- Main background with accent border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#2A2A2A" />
            <stroke
                android:width="2dp"
                android:color="@color/bdk_accent_primary" />
        </shape>
    </item>
</layer-list>
