<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/bdk_glass_background" />
            <corners android:radius="12dp" />
            <stroke
                android:width="2dp"
                android:color="@color/bdk_accent_primary" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/bdk_button_secondary_pressed" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
                android:color="@color/bdk_border" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/bdk_button_secondary" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
                android:color="@color/bdk_border" />
        </shape>
    </item>
</selector>
