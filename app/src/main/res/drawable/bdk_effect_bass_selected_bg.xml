<?xml version="1.0" encoding="utf-8"?>
<!-- Bass Reactor effect preview - SELECTED state -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow -->
    <item android:left="-2dp" android:right="-2dp" android:top="-2dp" android:bottom="-2dp">
        <shape android:shape="rectangle">
            <corners android:radius="14dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="100dp"
                android:startColor="#500088FF"
                android:endColor="#000088FF"
                android:centerX="0.5"
                android:centerY="0.5" />
        </shape>
    </item>
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#1A1A1A" />
        </shape>
    </item>
    <!-- Bass wave from bottom - brighter -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#700088FF"
                android:centerColor="#500044FF"
                android:endColor="#10000000" />
        </shape>
    </item>
    <!-- Accent border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="@color/bdk_accent_primary" />
        </shape>
    </item>
</layer-list>
