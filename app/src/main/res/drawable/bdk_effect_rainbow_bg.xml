<?xml version="1.0" encoding="utf-8"?>
<!-- Rainbow Wave effect preview - horizontal rainbow gradient -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#1A1A1A" />
        </shape>
    </item>
    <!-- Rainbow gradient overlay -->
    <item android:top="15dp" android:bottom="15dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#40FF0000"
                android:centerColor="#4000FF00"
                android:endColor="#400000FF" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Additional color layer -->
    <item android:top="25dp" android:bottom="25dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#30FFFF00"
                android:centerColor="#3000FFFF"
                android:endColor="#30FF00FF" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <!-- Subtle border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="#333333" />
        </shape>
    </item>
</layer-list>
