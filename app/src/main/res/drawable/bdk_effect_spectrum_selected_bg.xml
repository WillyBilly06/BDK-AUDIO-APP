<?xml version="1.0" encoding="utf-8"?>
<!-- Spectrum Bars effect preview - SELECTED state -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow -->
    <item android:left="-2dp" android:right="-2dp" android:top="-2dp" android:bottom="-2dp">
        <shape android:shape="rectangle">
            <corners android:radius="14dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="100dp"
                android:startColor="#5000FF00"
                android:endColor="#0000FF00"
                android:centerX="0.5"
                android:centerY="0.5" />
        </shape>
    </item>
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#1A1A1A" />
        </shape>
    </item>
    <!-- Blur effect overlay with spectrum colors -->
    <item android:left="8dp" android:right="8dp" android:top="20dp" android:bottom="20dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#6000FF00"
                android:centerColor="#6000FFFF"
                android:endColor="#60FF00FF" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <!-- Accent border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="@color/bdk_accent_primary" />
        </shape>
    </item>
</layer-list>
