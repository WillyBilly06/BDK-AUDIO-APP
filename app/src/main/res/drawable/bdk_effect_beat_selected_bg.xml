<?xml version="1.0" encoding="utf-8"?>
<!-- Beat Pulse effect preview - SELECTED state -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow -->
    <item android:left="-2dp" android:right="-2dp" android:top="-2dp" android:bottom="-2dp">
        <shape android:shape="rectangle">
            <corners android:radius="14dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="100dp"
                android:startColor="#50FF0066"
                android:endColor="#00FF0066"
                android:centerX="0.5"
                android:centerY="0.5" />
        </shape>
    </item>
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#1A1A1A" />
        </shape>
    </item>
    <!-- Radial pulse effect - brighter -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="60dp"
                android:centerX="0.5"
                android:centerY="0.5"
                android:startColor="#70FF0066"
                android:endColor="#20FF0066" />
        </shape>
    </item>
    <!-- Accent border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="@color/bdk_accent_primary" />
        </shape>
    </item>
</layer-list>
