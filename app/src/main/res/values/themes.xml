﻿<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - BDK Audio Dark Theme -->
    <style name="Base.Theme.MySpeakerControl" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary colors - BDK Cyan -->
        <item name="colorPrimary">@color/bdk_accent_primary</item>
        <item name="colorPrimaryVariant">@color/bdk_accent_primary_dark</item>
        <item name="colorOnPrimary">@color/bdk_text_on_accent</item>
        
        <!-- Secondary colors - BDK Orange -->
        <item name="colorSecondary">@color/bdk_accent_secondary</item>
        <item name="colorSecondaryVariant">@color/bdk_accent_secondary_light</item>
        <item name="colorOnSecondary">@color/bdk_text_on_accent</item>
        
        <!-- Background -->
        <item name="android:colorBackground">@color/bdk_background_primary</item>
        <item name="colorSurface">@color/bdk_background_secondary</item>
        <item name="colorOnSurface">@color/bdk_text_primary</item>
        
        <!-- Status bar - Fully immersive -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/bdk_background_primary</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.MySpeakerControl" parent="Base.Theme.MySpeakerControl" />
    
    <!-- Splash/Connection Screen Theme -->
    <style name="Theme.MySpeakerControl.Splash" parent="Base.Theme.MySpeakerControl">
        <item name="android:windowBackground">@color/bdk_background_primary</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    
    <!-- Card style -->
    <style name="Widget.App.Card" parent="">
        <item name="android:background">@drawable/bdk_card_glass</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
    
    <!-- Section title style -->
    <style name="TextAppearance.App.SectionTitle" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/bdk_text_tertiary</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <!-- Dialog Theme -->
    <style name="Theme.MySpeakerControl.Dialog" parent="Theme.Material3.Dark.Dialog.Alert">
        <item name="android:background">@color/bdk_background_primary</item>
        <item name="android:colorBackground">@color/bdk_background_primary</item>
        <item name="colorSurface">@color/bdk_background_secondary</item>
        <item name="colorPrimary">@color/bdk_accent_primary</item>
    </style>
    
    <!-- Bottom Sheet Theme -->
    <style name="Theme.MySpeakerControl.BottomSheet" parent="Theme.Material3.Dark.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.App.BottomSheet</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackground">@color/bdk_background_primary</item>
        <item name="colorSurface">@color/bdk_background_primary</item>
    </style>
    
    <style name="Widget.App.BottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="backgroundTint">@color/bdk_background_primary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.BottomSheet</item>
    </style>
    
    <style name="ShapeAppearance.App.BottomSheet" parent="ShapeAppearance.Material3.Corner.ExtraLarge">
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
    
    <!-- Primary button style -->
    <style name="Widget.App.Button.Primary" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/bdk_accent_primary</item>
        <item name="android:textColor">@color/bdk_text_on_accent</item>
        <item name="cornerRadius">14dp</item>
    </style>
    
    <!-- Secondary button style -->
    <style name="Widget.App.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/bdk_accent_primary</item>
        <item name="android:textColor">@color/bdk_accent_primary</item>
        <item name="cornerRadius">14dp</item>
    </style>
</resources>
